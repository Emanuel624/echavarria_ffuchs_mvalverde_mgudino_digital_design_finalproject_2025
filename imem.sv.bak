`default_nettype none

module imem (
  input  logic [31:0] a,
  output logic [31:0] rd
);
  logic [31:0] RAM [0:63];

  initial begin
    $readmemh("memfile.dat", RAM);
  end

  // Lectura combinacional (word-aligned).
  // Para 64 palabras (0..63) el Ã­ndice usa 6 bits: a[7:2].
  assign rd = RAM[a[7:2]];

endmodule

`default_nettype wire
